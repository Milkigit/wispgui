#!/bin/sh
#
# Wrapper script for wisp.reader inventory.
#

# default Python interpreter is 'python' from your $PATH; set the $PYTHON
# environment variable to override it
: ${PYTHON:=python}
export PYTHONPATH="`dirname $0`/..:$PYTHONPATH"


HOSTNAME="$1"; shift
if test -z "$HOSTNAME"; then
	echo "Usage: $(basename "$0") HOSTNAME [-h] [args]" 1>&2
	echo "	-h	Show help text" 1>&2
	exit 1
fi

exec "$PYTHON" -m wisp.reader "$HOSTNAME" inventory ${1+"$@"}
